# EventMate - Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
# For local development, use your own PostgreSQL database
DATABASE_URL=postgresql://username:password@localhost:5432/eventmate

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Application URL (for Stripe redirects)
# Change this to your domain in production
APP_URL=http://localhost:5000

# Stripe Configuration (Optional - for payment processing)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Google Gemini AI Configuration (Optional - for AI recommendations)
# Get this from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Node Environment
NODE_ENV=development
